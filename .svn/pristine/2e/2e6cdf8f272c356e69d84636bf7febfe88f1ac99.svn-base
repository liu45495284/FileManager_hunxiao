<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/home_group" >
    </android.support.v4.view.ViewPager>

    <RadioGroup
        android:id="@+id/home_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:background="#FFFBFF"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/home_radio_one"
            style="@style/MMTabButton"
            android:checked="true"
            android:drawableTop="@drawable/tab_category"
            android:text="@string/tab_category"
            android:textColor="@color/mainradio_textcolor" />

        <RadioButton
            android:id="@+id/home_radio_two"
            style="@style/MMTabButton"
            android:drawableTop="@drawable/tab_file"
            android:text="@string/tab_file"
            android:textColor="@color/mainradio_textcolor" />

        <RadioButton
            android:id="@+id/home_radio_three"
            style="@style/MMTabButton"
            android:drawableTop="@drawable/tab_remote"
            android:text="@string/tab_remote"
            android:textColor="@color/mainradio_textcolor" />
    </RadioGroup>



</RelativeLayout>