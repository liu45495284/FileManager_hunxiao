<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/category_music"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_page_item_height"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/category_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3px"
            android:src="@drawable/category_icon_music" />

        <TextView
            android:id="@+id/category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category_music"
            android:textColor="#323232"
            android:textSize="16.0sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/category_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9d9d9e"
            android:textSize="12.0sp"/>

    </LinearLayout>

</LinearLayout>